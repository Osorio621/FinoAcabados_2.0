generator client {
  provider = "prisma-client-js"
  output   = "./generated-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
}

enum StockStatus {
  IN_STOCK
  OUT_OF_STOCK
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String // Hashed with bcrypt
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("users")
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  products Product[]

  @@map("categories")
}

model Product {
  id            String      @id @default(cuid())
  name          String
  slug          String?     @unique
  description   String
  price         Decimal     @db.Decimal(10, 2)
  isOffer       Boolean     @default(false) @map("is_offer")
  discountPrice Decimal?    @map("discount_price") @db.Decimal(10, 2)
  stock         Int         @default(0)
  status        StockStatus @default(IN_STOCK)
  imageUrl      String?     @map("image_url")
  categoryId    String      @map("category_id")
  category      Category    @relation(fields: [categoryId], references: [id])
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @default(now()) @updatedAt @map("updated_at")

  @@index([categoryId], name: "idx_products_category")
  @@index([slug], name: "idx_products_slug")
  @@map("products")
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("password_reset_tokens")
}
